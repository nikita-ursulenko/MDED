{% block content %}
	<style>
		
	 </style>
	<section id="despre" class="py-20 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-5xl font-bold text-gray-900 mb-8">Despre Program</h2>
				<p class="text-xl text-gray-600 max-w-4xl mx-auto">
					{{ despre_description }}
				</p>
			</div>

			<div class="mb-16">
				<h3 class="text-3xl font-bold text-center text-gray-900 mb-12">Scopul programului</h3>
				<div class="bg-white rounded-xl shadow-lg p-8">
					<p class="text-lg text-gray-700 mb-8 text-center">
						{{ scopul_programului }}
					</p>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
						{# Запускаем цикл по каждому элементу в массиве scopul_list #}
						{% for item in scopul_list %}
							<div class="flex items-start space-x-4">
								<div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
									<svg class="w-4 h-4 text-white" fill="currentColor" viewbox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
									</svg>
								</div>
								<span class="text-base text-gray-700">{{ item }}</span>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>

			<div class="bg-white rounded-xl shadow-lg p-8">
				<h3 class="text-3xl font-bold text-center text-gray-900 mb-8">Sectoare eligibile</h3>
				<p class="text-lg text-gray-600 text-center mb-12 max-w-4xl mx-auto">
					Programul sprijină investițiile în șase ramuri industriale strategice, esențiale pentru modernizarea economiei Republicii Moldova:
				</p>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria electronică</h4>
						<p class="text-gray-600">Componente electronice, echipamente IT, sisteme automatizate</p>
					</div>

					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria chimică și farmaceutică</h4>
						<p class="text-gray-600">Medicamente, produse chimice, cosmetice, materiale sanitare</p>
					</div>

					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path d="M8 5a1 1 0 100 2h5.586l-1.293 1.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L13.586 5H8zM12 15a1 1 0 100-2H6.414l1.293-1.293a1 1 0 10-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L6.414 15H12z"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria constructoare de mașini și componente auto</h4>
						<p class="text-gray-600">Piese auto, echipamente industriale, utilaje agricole</p>
					</div>

					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria textilă și de îmbrăcăminte</h4>
						<p class="text-gray-600">Confecții textile, materiale tehnice, accesorii vestimentare</p>
					</div>

					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria materialelor de construcții</h4>
						<p class="text-gray-600">Materiale de construcție, elemente prefabricate, sisteme de izolație</p>
					</div>

					<div class="text-center p-6 rounded-xl border-2 border-gray-200 hover:border-gov-blue hover:shadow-lg transition-all cursor-pointer group">
						<div class="w-20 h-20 bg-gov-light-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gov-blue transition-colors">
							<svg class="w-10 h-10 text-gov-blue group-hover:text-white transition-colors" fill="currentColor" viewbox="0 0 20 20">
								<path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
							</svg>
						</div>
						<h4 class="text-xl font-bold text-gray-900 mb-2">Industria alimentară</h4>
						<p class="text-gray-600">Procesarea alimentelor, băuturi, conserve, produse bio</p>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
