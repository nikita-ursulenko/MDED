<!-- FAQ -->
<section id="faq" class="py-20 bg-gray-50">
	<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-bold text-gray-900 mb-6">Întrebări frecvente</h2>
		</div>

		<div class="space-y-4">
			{% for item in faq_items %}
				<div class="bg-white rounded-lg border">
					<button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 rounded-lg" onclick="toggleFAQ({{ loop.index }})">
						<span class="font-semibold">{{ item.question_text }}</span>
						<svg class="w-5 h-5 transform transition-transform" id="icon{{ loop.index }}" fill="currentColor" viewbox="0 0 20 20">
							<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</button>
					<div class="px-6 pb-4 hidden" id="answer{{ loop.index }}">
						<div class="text-gray-600">{{ item.answer_text|raw }}</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

<script>
	function toggleFAQ(num) {
const answer = document.getElementById(`answer${num}`);
const icon = document.getElementById(`icon${num}`);

if (answer.classList.contains('hidden')) {
answer.classList.remove('hidden');
icon.style.transform = 'rotate(180deg)';
} else {
answer.classList.add('hidden');
icon.style.transform = 'rotate(0deg)';
}
}
</script>
