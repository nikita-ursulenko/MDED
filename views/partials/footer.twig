{% block content %}
	<!-- Footer -->
	<footer id="contact" class="bg-gov-dark-blue text-white py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div
				class="grid grid-cols-1 md:grid-cols-4 gap-8">
				<!-- Column 1: Logo and Contact -->
				<div>
					<div
						class="flex items-center space-x-3 mb-6">
						<!-- Logo svg -->
						<div>
							{% if fields.column_1_main_title %}
								<div class="font-bold text-lg">{{ fields.column_1_main_title }}</div>
							{% endif %}
						</div>
					</div>
					{% if fields.column_1_title %}
						<h3 class="font-semibold mb-4 text-lg">{{ fields.column_1_title }}</h3>
					{% endif %}
					<div class="space-y-3 text-base text-blue-200">
						{% if fields.footer_address_text and fields.footer_address_url %}
							<p>üìç
								<a href="{{ fields.footer_address_url }}" class="hover:underline">
									{{ fields.footer_address_text }}</a>
							</p>
						{% endif %}
						{% if fields.footer_phone_text and fields.footer_phone_url %}
							<p>üìû
								<a href="{{ fields.footer_phone_url }}" class="hover:underline">{{ fields.footer_phone_text }}</a>
							</p>
						{% endif %}
						{% if fields.footer_email_text and fields.footer_email_url %}
							<p>‚úâÔ∏è
								<a href="{{ fields.footer_email_url }}" class="hover:underline">{{ fields.footer_email_text }}</a>
							</p>
						{% endif %}
					</div>
				</div>

				<!-- Column 2: Partners -->
				<div>
					{% if fields.column_2_title %}
						<h3 class="font-semibold mb-4 text-lg">{{ fields.column_2_title }}</h3>
					{% endif %}
					<ul class="space-y-2 text-base text-blue-200">
						{% if fields.footer_partner_1 %}
							<li>{{ fields.footer_partner_1 }}</li>
						{% endif %}
						{% if fields.footer_partner_2 %}
							<li>{{ fields.footer_partner_2 }}</li>
						{% endif %}
						{% if fields.footer_partner_3 %}
							<li>{{ fields.footer_partner_3 }}</li>
						{% endif %}
						{% if fields.footer_partner_4 %}
							<li>{{ fields.footer_partner_4 }}</li>
						{% endif %}
						{% if fields.footer_partner_5 %}
							<li>{{ fields.footer_partner_5 }}</li>
						{% endif %}
						{% if fields.footer_partner_6 %}
							<li>{{ fields.footer_partner_6 }}</li>
						{% endif %}
					</ul>
				</div>

				<!-- Column 3: E-Government Sites -->
				<div>
					{% if fields.column_3_title %}
						<h3 class="font-semibold mb-4 text-lg">{{ fields.column_3_title }}</h3>
					{% endif %}
					<ul class="space-y-2 text-base text-blue-200">
						{% if fields.egov_site_1_name and fields.egov_site_1_url %}
							<li>
								<a href="{{ fields.egov_site_1_url }}" class="hover:text-white transition-colors">{{ fields.egov_site_1_name }}</a>
							</li>
						{% endif %}
						{% if fields.egov_site_2_name and fields.egov_site_2_url %}
							<li>
								<a href="{{ fields.egov_site_2_url }}" class="hover:text-white transition-colors">{{ fields.egov_site_2_name }}</a>
							</li>
						{% endif %}
						{% if fields.egov_site_3_name and fields.egov_site_3_url %}
							<li>
								<a href="{{ fields.egov_site_3_url }}" class="hover:text-white transition-colors">{{ fields.egov_site_3_name }}</a>
							</li>
						{% endif %}
						{% if fields.egov_site_4_name and fields.egov_site_4_url %}
							<li>
								<a href="{{ fields.egov_site_4_url }}" class="hover:text-white transition-colors">{{ fields.egov_site_4_name }}</a>
							</li>
						{% endif %}
						{% if fields.egov_site_5_name and fields.egov_site_5_url %}
							<li>
								<a href="{{ fields.egov_site_5_url }}" class="hover:text-white transition-colors">{{ fields.egov_site_5_name }}</a>
							</li>
						{% endif %}
					</ul>
				</div>

				<!-- Column 4: Copyright -->
				<div>
					{% if fields.column_4_title %}
						<h3 class="font-semibold mb-4 text-lg">{{ fields.column_4_title }}</h3>
					{% endif %}
					<div class="text-base text-blue-200 space-y-3">
						{% if fields.footer_copyright_text %}
							<p>{{ fields.footer_copyright_text }}</p>
						{% endif %}
						<div class="pt-4 space-y-2">
							{% if fields.footer_privacy_text and fields.footer_privacy_url %}
								<div>
									<a href="{{ fields.footer_privacy_url }}" class="hover:text-white transition-colors">{{ fields.footer_privacy_text }}</a>
								</div>
							{% endif %}
							{% if fields.footer_terms_text and fields.footer_terms_url %}
								<div>
									<a href="{{ fields.footer_terms_url }}" class="hover:text-white transition-colors">{{ fields.footer_terms_text }}</a>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
{% endblock %}
