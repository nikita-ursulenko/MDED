                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg p-8 sticky top-8">
					
                        <h3 class="text-2xl font-bold text-gov-blue mb-6">Documente pentru descărcare</h3>

                        <div class="space-y-4">
                        {% set args = {
                            'post_type': 'download_document',
                            'posts_per_page': -1,
                            'orderby': 'title',
                            'order': 'ASC'
                        } %}
                        {% set download_documents = function('get_posts', args) %}

                        {% if download_documents %}
                            {% for doc in download_documents %}
                            {% set file = function('get_field', 'download_file', doc.ID) %}
                            {% if file and file.url %}
                                <a href="{{ file.url }}" class="flex items-center space-x-4 p-4 bg-gov-light-blue rounded-lg hover:bg-blue-100 transition-colors" target="_blank">
                                <div class="w-12 h-12 bg-gov-blue rounded-lg flex items-center justify-center">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-base">{{ doc.post_title }}</div>
                                    <div class="text-sm text-gray-600">
                                    {% if file.mime_type %}
                                        {% set type = file.mime_type|lower %}
                                        {% if 'wordprocessingml.document' in type %}
                                        DOCX
                                        {% elseif 'pdf' in type %}
                                        PDF
                                        {% elseif 'image' in type %}
                                        Image
                                        {% else %}
                                        {{ type|split('/')|last|upper }}
                                        {% endif %}
                                    {% endif %}

                                    {% set mb = (file.filesize / 1024 / 1024) %}
                                    {% if mb >= 0.1 %}
                                    , {{ mb|number_format(1, '.', '') }} MB
                                    {% else %}
                                    , {{ (file.filesize / 1024)|number_format(0, '.', '') }} KB
                                    {% endif %}
                                    </div>
                                </div>
                                </a>
                            {% endif %}
                            {% endfor %}
